<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".activities.pesquisarExames">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="260dp"
            android:layout_height="43dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="26dp"
            android:text="Buscar Exames"
            android:textColor="#2C40F1"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/buscarExames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="26dp"
            android:text="Clique e segure na matrícula desejada para excluir."
            android:textColor="#403B3B"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/texto1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="0dp"
                android:text="Matrícula"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/texto2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="50dp"
                android:text="Exame"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/texto3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="10dp"
                android:text="Data"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="404dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/listaDeExames1"
                    android:layout_width="130dp"
                    android:layout_height="1000dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="0dp"
                    android:footerDividersEnabled="false"
                    android:headerDividersEnabled="false" />

                <ListView
                    android:id="@+id/listaDeExames2"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:footerDividersEnabled="false"
                    android:headerDividersEnabled="false" />

                <ListView
                    android:id="@+id/listaDeExames3"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="10dp"
                    android:footerDividersEnabled="false"
                    android:headerDividersEnabled="false" />

            </LinearLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButtonVoltar"
            android:layout_width="58dp"
            android:layout_height="125dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:src="?attr/actionModeCloseDrawable"
            app:backgroundTint="#2C40F1" />
    </LinearLayout>

</ScrollView>